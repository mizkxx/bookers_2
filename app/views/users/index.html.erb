<html>
<%= render 'books/list', books: @books %>
<body>

<div class='body'>
  <div class='container'>

    <p id="notice"></p>


    <div class='row'>
      <div class='col-xs-9'>
        <h2>Users</h2>

        <table class="table table-striped">
          <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
              <td><%= user.name %></td>
              <td><%= link_to "show", user_path(user.id) %></td>
              <% if user.id == current_user.id %>
                <td><%= link_to "プロフィール編集", edit_user_path(user.id), class: "pull-right" %></td>
              <% end %>
            </tr>
          <% end %>
          </tbody>
        </table>

      </div>

    </div>
  </div>
</div>

<footer>
  <div class='container'>
    <div class='row'>
      <div class='col-xs-3 col-xs-offset-9'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>


</body>
</html>