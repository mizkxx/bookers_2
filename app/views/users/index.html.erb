<html>
<%= render 'books/list', book: @book, user: current_user %>
<body>

<div class='body'>

    <p id="notice"></p>

<div class="container"> <!-- ここを追加 -->
<div class="row">   <!-- ここを追加 -->
<div class="col-lg-8">
        <h2>Users</h2>

        <table class="table table-striped">
          <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
              <td><%= user.name %></td>
              <td><%= link_to "show", user_path(user.id) %></td>
              <% if user.id == current_user.id %>
                <td><%= link_to "edit profile", edit_user_path(user.id), class: "pull-right" %></td>
              <% end %>
            </tr>
          <% end %>
          </tbody>
        </table>

      </div>
</div>
    </div>
  </div>
</div>




</body>
</html>