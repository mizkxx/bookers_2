

<%= render 'books/list',book: @book, user:current_user %>


<div class="container"> <!-- ここを追加 -->
<div class="row">   <!-- ここを追加 -->

<div class="col-xs-9">
<table class="table table-hover">
   <h2>Books</h2>
  <thead>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Opnion</th>
    <th></th>
  </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
  <tr>
    <% user = book.user %>
    <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
    <br><%= link_to(user.name, "/users/#{user.id}") %></td>
    <td><%= link_to(book.title, "/books/#{book.id}") %></td>
    <td><%= book.body %></td>
  </tr>
  </tbody>
    <% end %>
</table>
</div>
</div>
</div>