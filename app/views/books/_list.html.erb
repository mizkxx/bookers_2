
<div class='col-xs-3'>
  <h2>User info</h2>
  <table class="table table-striped">
    <tr><img class="attachment user profile_image fallback" src="/assets/no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg" alt="No image" /></tr>
    <tr>
      <th>name</th>
      <th>
        <%= @user.name %>
      </th>
    </tr>
    <tr>
      <th>introduction</th>
      <th>
        <%= @user.introduction %>
      </th>
    </tr>
  </table>

  <div class='row'>
    <td><%= link_to "プロフィール編集", edit_user_path(@user.id), class: "pull-right" %></td>
  </div>

  <h2>New book</h2>
  <%= form_for(@book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title, class: "book_title" %>

    <h4>Opnion</h4>
    <%= f.text_area :body, class: "book_body" %>

    <br><%= f.submit 'Create Book' %></br>

  <% end %>

</div>
