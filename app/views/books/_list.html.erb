<div class="col-xs-3">
  <h2>User info</h2>
  <table class="table table-striped">
    <tr><img class="attachment user profile_image fallback" src="/assets/no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg" alt="No image" /></tr>
    <tr>
      <th>name</th>
      <th>
        <%= user.name %>
      </th>
    </tr>
    <tr>
      <th>introduction</th>
      <th>
        <%= user.introduction %>
      </th>
    </tr>
  </table>
  <div class='row'>
    <% if user.id == current_user.id %>
      <li><%= link_to edit_user_path(user.id) do %>
      <span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></span>
      <% end %></li>
    
    <% end %>

  </div>

  <h2>New book</h2>
  <%= form_for(book) do |f| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h4><%= book.errors.count %>件のerrorが発生しました。</h4>
      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <h4>Title</h4>
    <%= f.text_field :title, class: "form-control" %>

    <h4>Opnion</h4>
    <%= f.text_area :body, class: "form-control" %><br>
  <div class="actions row">
    <input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" data-disable-with="Create Book" />
  </div>
  <% end %>


</div>
</div>
